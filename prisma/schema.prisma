// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     String   @id
  UserXP UserXP[]
}

model UserXP {
  userId   String
  serverId Int
  user     User   @relation(fields: [userId], references: [id])
  level    Int
  xp       Int
  levelXp  Int

  @@id([serverId, userId])
}
