// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String        @id
  userXP   GuildMember[]
  bumps    Bump[]
  username String
  avatar   String?
}

model GuildMember {
  Username  String?
  avatar    String?
  userId    String
  guildId   String
  guildName String  @map(name: "guild.name")
  guild     Guild   @relation(fields: [guildId], references: [id])
  user      User    @relation(fields: [userId], references: [id])
  xp        Int

  @@id([guildId, userId])
}

model Guild {
  id           String        @id
  name         String?
  guildMembers GuildMember[]
  xpMouvements XpMouvement[]
  bumps        Bump[]
}

model Bump {
  userId    String
  guildId   String
  guildName String   @map(name: "guild.name")
  guild     Guild    @relation(fields: [guildId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  date      DateTime @default(now())

  @@id([guildId, userId, date])
}

model XpMouvement {
  id        Int              @id @default(autoincrement())
  xp        Int
  byUserId  String
  forUserId String
  date      DateTime         @default(now())
  cause     XpMouvementCause
  guildId   String
  guildName String           @map(name: "guild.name")
  guild     Guild            @relation(fields: [guildId], references: [id])
}

enum XpMouvementCause {
  XPDROP
  ADMINXP
  XPIMPORT
  PRIME
  OTHER
}
