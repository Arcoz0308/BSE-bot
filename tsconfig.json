{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "$core/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "./src/utils/type/*.d.ts",
      "./node_modules/@types"
    ],
    "resolveJsonModule": true,
    "outDir": "./out",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  }
}
